<component type="desktop">
	<id>net.bartkessels.getit.desktop</id>
	<metadata_license>CC0</metadata_license>
	<project_license>GPL-3.0+</project_license>
	<name>GetIt</name>
	<summary>Send HTTP requests to API endpoints</summary>
	<translation type="gettext">getit</translation>

	<description>
		<p>
			Send HTTP requests to API endpoints and display the response of
			the server. GetIt offers many features such as:<br/>
			- Saving and opening requests<br/>
			- Sending custom POST data<br/>
			- Syntax highlighting<br/>
		</p>
	</description>

	<launchable type="desktop-id">net.bartkessels.getit.desktop</launchable>

	<screenshots>
		<screenshot type="default">
			<caption>Add default information about the request</caption>
			<image>https://github.com/bartkessels/getit/raw/master/data/screenshots/body.png</image>
		</screenshot>
		<screenshot>
			<caption>Add cookies to the request</caption>
			<image>https://github.com/bartkessels/getit/raw/master/data/screenshots/cookies.png</image>
		</screenshot>
		<screenshot>
			<caption>Add headers to the request</caption>
			<image>https://github.com/bartkessels/getit/raw/master/data/screenshots/headers.png</image>
		</screenshot>
		<screenshot>
			<caption>Display the response of the request</caption>
			<image>https://github.com/bartkessels/getit/raw/master/data/screenshots/response.png</image>
		</screenshot>
	</screenshots>

	<url type="homepage">https://getit.bartkessels.net</url>
	<developer_name>Bart Kessels</developer_name>
	<update_contact>bartkessels_AT_bk-mail.com</update_contact>

	<languages>
		<lang>en_US</lang>
		<lang percentage="100">nl_NL</lang>
	</languages>

	<provides>
		<binary>getit</binary>
	</provides>

	<releases>
		<release version="4.0.1" date="2017-11-06">
			<description>
				<p>
					This release added the following items<br/>
					- Ship own icons<br/>
					- Add action to launch new instance from applications overview
				</p>
			</description>
		</release>

		<release version="4.0" date="2017-11-04">
			<description>
				<p>
					This release added the following items<br/>
					- Add recent files support<br/>
					- Add ability to set timeout for request<br/>
					- Add ability to set user agent for request<br/>
					- Add preferences window<br/>
					- Add shortcuts window<br/>
					- Add support for translations<br/>
					- Add support for flatpak
				</p>
			</description>
		</release>

		<release version="3.2" date="2017-09-05">
			<description>
				<p>
					This release fixed the following items.<br/>
					- Fix non-highlighting bug in response stack<br/>
					- Fix bug application crash on re-save
				</p>
			</description>
		</release>

		<release version="3.1" date="2017-08-13">
			<description>
				<p>
					This release added the following items.<br/>
					- Move to Meson build system<br/>
					- Allow opening files on application startup
				</p>
			</description>
		</release>

		<release version="3.0" date="2017-07-11">
			<description>
				<p>
					This release fixed the following items.<br/>
					- Rewrite to C
				</p>
			</description>
		</release>

		<release version="2.0" date="2017-06-17">
			<description>
				<p>
					This release added the following items.<br/>
					- Display message when something has gone wrong while sending the request<br/>
					- Add ability to save a request<br/>
					- Add ability to open a request<br/>
					- Add ability to clear the current request
				</p>
			</description>
		</release>

		<release version="1.4.1" date="2017-06-11">
			<description>
				<p>
					This release added the following items.
					<ul>
						<li>Add cancel request button</li>
						<li>Add shortcuts for send and cancel button</li>
						<li>Display notification when request is processed</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="1.4" date="2017-06-09">
			<description>
				<p>
					This release added the following items.<br/>
					- Add spinner to indicate the request is still being sent<br/>
					- Add shortcut to send a request
				</p>
			</description>
		</release>

		<release version="1.3" date="2017-06-01">
			<description>
				<p>
					This release fixed/added the following items.<br/>
					- Refactor codebase<br/>
					- Add ability to create raw body instead of formdata
				</p>
			</description>
		</release>

		<release version="1.2" date="2017-04-07">
			<description>
				<p>
					This release fixed/added the following items.<br/>
					- Add ability to add cookies to a request<br/>
					- Fix endless scrolling bug on response stack
				</p>
			</description>
		</release>

		<release version="1.1" date="2017-03-31">
			<description>
				<p>
					This release added the following items.<br/>
					- Add ability to add files to a request
				</p>
			</description>
		</release>

		<release version="1.0" date="2017-03-29" />
	</releases>
</component>
