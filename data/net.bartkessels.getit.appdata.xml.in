<component type="desktop-application">
	<id>net.bartkessels.getit</id>
	<metadata_license>CC0</metadata_license>
	<project_license>GPL3.0+-</project_license>
	<name>GetIt</name>
	<summary>Send HTTP requests to API endpoints</summary>

	<description>
		<p>
			Send HTTP requests to API endpoints and display the response of
			the server. GetIt offers many features such as:
			<ul>
				<li>Saving and opening requests</li>
				<li>Sending custom POST data</li>
				<li>Syntax Highlighting</li>
			</ul>
		</p>
	</description>

	<launchable type="desktop-id">net.bartkessels.getit.desktop</launchable>

	<screenshots>
		<screenshot type="default">
			<caption>Add default information about the request</caption>
			<image>https://github.com/bartkessels/getit/blob/master/data/screenshots/body.png</image>
		</screenshot>
		<screenshot>
			<caption>Add cookies to the request</caption>
			<image>https://github.com/bartkessels/getit/blob/master/data/screenshots/cookies.png</image>
		</screenshot>
		<screenshot>
			<caption>Add headers to the request</caption>
			<image>https://github.com/bartkessels/getit/blob/master/data/screenshots/headers.png</image>
		</screenshot>
		<screenshot>
			<caption>Display the response of the request</caption>
			<image>https://github.com/bartkessels/getit/blob/master/data/screenshots/response.png</image>
		</screenshot>
	</screenshots>

	<url type="homepage">https://getit.bartkessels.net</url>
	<developer_name>Bart Kessels</developer_name>
	<update_contact>bartkessels_AT_bk-mail.com</update_contact>

	<provides>
		<binary>getit</binary>
	</provides>

	<releases>
		<release version="4.0" date="2017-11-04">
			<description>
				<p>
					<ul>
						<li>Add recent files support</li>
						<li>Add ability to set timeout for request</li>
						<li>Add ability to set user agent for request</li>
						<li>Add preferences window</li>
						<li>Add shortcuts window</li>
						<li>Add support for translations</li>
						<li>Add support for flatpak</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="3.2" date="2017-09-05">
			<description>
				<p>
					<ul>
						<li>Fix non-highlighting bug in response stack</li>
						<li>Fix bug application crash on re-save</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="3.1" date="2017-08-13">
			<description>
				<p>
					<ul>
						<li>Move to Meson build system</li>
						<li>Allow opening files on application startup</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="3.0" date="2017-07-11">
			<description>
				<p>
					<ul>
						<li>Rewrite application in C</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="2.0" date="2017-06-17">
			<description>
				<p>
					<ul>
						<li>Display message when something has gone wrong while sending the request</li>
						<li>Add ability to save a request</li>
						<li>Add ability to open a request</li>
						<li>Add ability to clear the current request</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="1.4.1" date="2017-06-11">
			<description>
				<p>
					<ul>
						<li>Add cancel request button</li>
						<li>Add shortcuts for send and cancel button</li>
						<li>Display notification when request is processed</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="1.4" date="2017-06-09">
			<description>
				<p>
					<ul>
						<li>Add spinner to indicate the request is still being sent</li>
						<li>Add shortcut to send request</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="1.3" date="2017-06-01">
			<description>
				<p>
					<ul>
						<li>Refactor codebase</li>
						<li>Add ability to create raw body instead of formdata</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="1.2" date="2017-04-07">
			<description>
				<p>
					<ul>
						<li>Add ability to add cookies to a request</li>
						<li>Fix endless scrolling bug on response stack</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="1.1" date="2017-03-31">
			<description>
				<p>
					<ul>
						<li>Add ability to add files to a request</li>
					</ul>
				</p>
			</description>
		</release>

		<release version="1.0" date="2017-03-29" />
	</releases>
</component>
