{
	"app-id": "net.bartkessels.getit",
	"runtime": "org.gnome.Platform",
	"runtime-version": "master",
	"sdk": "org.gnome.Sdk",
	"command": "getit",
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=x11",
		"--socket=wayland",
		"--filesystem=host",
		"--filesystem=xdg-run/dconf",
		"--filesystem=~/.config/dconf:ro",
		"--talk-name=ca.desrt.dconf",
		"--env=DCONF_USER_CONFIG_DIR=.config/dconf"
	],
	"build-options": {
		"cflags": "-O2 -g",
		"cxxflags": "-O2 -g",
		"env": {
			"V": "1"
	}
	},
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig",

		"*.la",
		"*.a"
	],
	"modules": [
		{
			"name": "gtksourceview-3.0",
			"config-opts": ["--disable-Werror"],
			"builddir": true,
			"sources": [
				{
					"type": "git",
					"branch": "gnome-3-24",
					"url": "https://git.gnome.org/browse/gtksourceview"
				}
			]
		},
		{
			"name": "getit",
			"buildsystem": "meson",
			"builddir": true,
			"sources": [
				{
					"type": "git",
					"branch": "development",
					"url": "https://github.com/bartkessels/getit"
				}
			]
		}
	]
}
